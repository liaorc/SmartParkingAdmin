<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:paddingTop="4dp"
              android:paddingBottom="4dp"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3.5"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:id="@+id/order_list_item_point_imageView"
            android:src="@drawable/item_red240x240"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/order_list_item_usernameTextView"
            android:layout_toRightOf="@id/order_list_item_point_imageView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/order_list_item_distanceTextView"
            android:layout_toRightOf="@id/order_list_item_point_imageView"
            android:layout_below="@id/order_list_item_usernameTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:textColor="@color/main_text_color"
            android:textSize="13sp"
            android:gravity="left"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/order_list_item_feeTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_weight="4"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/order_list_item_orderTypeTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/order_list_item_submitTimeTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/main_text_color"
            android:textSize="13sp"
            android:gravity="center"
            />
    </LinearLayout>


    <ImageButton
        android:id="@+id/order_list_item_confirmButton"
        android:src="@drawable/selected_button240x240_white"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:background="@color/transparent"
        />
</LinearLayout>